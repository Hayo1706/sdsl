block Forms {
  name = column "Form": Str;
  questions* = block Question;
}

block Question {
  name =        column "Name": QName;
  question =    column "Question": Str;
  type =        column "Type": Types;
  maxlength =   column "Max Length": Int;
  value ?=      column "Value": Expr;
  condition =  column "Condition": Expr;
}
syntax Str = [\"]![\"]* [\"];

syntax Bool = "true" | "false";
syntax Types = "string" | "int" | "bool";
syntax Int = [\-]?[0-9]+; 
syntax QName = "Question" Int;

syntax Expr
  = bracket "(" Expr ")"
  > Bool 
  > left ( Expr "&&" Expr
          | Expr "||" Expr 
          )
  ;